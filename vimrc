" default
set nocompatible

" Turn on syntax highlighting
syntax on

" Turn on filetype detection and language-dependent indention
filetype plugin indent on

" set color scheme
colorscheme molokai
let g:molokai_original = 1

" set tabs as 4 spaces 
set tabstop=4
set autoindent
set smartindent
"add mouse support
set mouse=a
"
set number	" show line numbers
set showcmd	" show command in bottom


